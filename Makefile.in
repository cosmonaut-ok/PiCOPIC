hdf5: prepare
	test -d $(TARGETDIR)/@HDF5_VERSION@ || \
	(cd $(TARGETDIR); \
	wget -qO- "@HDF5_URL@" | tar xjf -; \
	cd @HDF5_VERSION@; \
	./autogen.sh; \
	./configure --enable-cxx --enable-build-mode=production --prefix=@prefix@; \
	make)

hdf5-install: hdf5
	cd $(TARGETDIR)/@HDF5_VERSION@; \
	make install

python:
	cd $(ROOTDIR)/lib/python/picopic; \
	python setup.py install
